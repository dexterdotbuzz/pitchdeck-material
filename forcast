<script>
    const data = {
        labels: ['Year 1', 'Year 2', 'Year 3', 'Year 4', 'Year 5'],
        clients: [20, 100, 400, 1500, 5000],
        revenue: [24000, 180000, 960000, 5400000, 24000000],
        margin: [35, 50, 60, 70, 75]
    };

    const config = {
        type: 'bar',
        data: {
            labels: data.labels,
            datasets: [
                {
                    label: 'Annual Revenue (ARR)',
                    data: data.revenue,
                    backgroundColor: 'rgba(66, 153, 225, 0.75)',
                    borderColor: 'rgba(66, 153, 225, 1)',
                    borderWidth: 1,
                    yAxisID: 'yRevenue',
                    order: 2 
                },
                {
                    label: 'Gross Margin',
                    data: data.margin,
                    type: 'line',
                    borderColor: '#38A169',
                    backgroundColor: 'rgba(56, 161, 105, 0.1)',
                    borderWidth: 3,
                    pointBackgroundColor: '#38A169',
                    pointRadius: 5,
                    fill: true,
                    tension: 0.4,
                    yAxisID: 'yMargin',
                    order: 1 
                }
            ]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            interaction: {
                mode: 'index',
                intersect: false,
            },
            plugins: {
                tooltip: {
                    backgroundColor: '#1a202c',
                    titleFont: { size: 16, weight: 'bold' },
                    bodyFont: { size: 14 },
                    padding: 15,
                    cornerRadius: 8,
                    callbacks: {
                        label: function(context) {
                            let label = context.dataset.label || '';
                            if (label) {
                                label += ': ';
                            }
                            if (context.dataset.yAxisID === 'yMargin') {
                                label += context.parsed.y + '%';
                            } else {
                                label += '$' + new Intl.NumberFormat('en-US', { notation: 'compact', compactDisplay: 'short' }).format(context.parsed.y);
                            }
                            return label;
                        },
                        afterBody: function(tooltipItems) {
                             const index = tooltipItems[0].dataIndex;
                             return '\nClients: ' + new Intl.NumberFormat().format(data.clients[index]);
                        }
                    }
                },
                legend: {
                    position: 'bottom',
                    labels: {
                        font: { size: 14 },
                        padding: 20
                    }
                },
                annotation: {
                    annotations: {
                        line1: {
                            type: 'line',
                            xMin: 0.5,
                            xMax: 0.5,
                            borderColor: 'rgba(229, 62, 62, 0.8)',
                            borderWidth: 2,
                            borderDash: [6, 6],
                            label: {
                                content: 'Your $300k: Localize Product & Secure Lighthouse Clients',
                                enabled: true,
                                position: 'start',
                                backgroundColor: 'rgba(229, 62, 62, 0.8)',
                                font: {
                                    weight: 'bold'
                                },
                                yAdjust: -15
                            }
                        }
                    }
                }
            },
            scales: {
                x: {
                    grid: { display: false },
                    ticks: { font: { size: 14 } }
                },
                yRevenue: {
                    type: 'linear',
                    position: 'left',
                    title: {
                        display: true,
                        text: 'Annual Revenue (USD)',
                        font: { size: 16, weight: '600' }
                    },
                    ticks: {
                        font: { size: 12 },
                        callback: function(value) {
                            return '$' + new Intl.NumberFormat('en-US', { notation: 'compact', compactDisplay: 'short' }).format(value);
                        }
                    }
                },
                yMargin: {
                    type: 'linear',
                    position: 'right',
                    min: 0,
                    max: 100,
                    title: {
                        display: true,
                        text: 'Gross Margin (%)',
                        font: { size: 16, weight: '600' }
                    },
                    ticks: {
                        font: { size: 12 },
                        callback: function(value) {
                            return value + '%';
                        }
                    },
                    grid: {
                        display: false
                    }
                }
            }
        }
    };

    const growthChart = new Chart(
        document.getElementById('growthChart'),
        config
    );
</script>

</body>
